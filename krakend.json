{
  "version": 3,
  "name": "My lovely gateway",
  "port": 8080,
  "cache_ttl": "3600s",
  "timeout": "3s",
  "extra_config": {
    "telemetry/logging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    },
    "telemetry/metrics": {
      "collection_time": "60s",
      "proxy_disabled": false,
      "router_disabled": false,
      "backend_disabled": false,
      "endpoint_disabled": false,
      "listen_address": ":8090"
    },
    "security/cors": {
      "allow_origins": [
        "http://192.168.99.100:3000",
        "http://localhost:3000",
        "https://bemypet.vercel.app"
      ],
      "allow_methods": [
        "POST",
        "GET",
	"PUT"
      ],
      "allow_headers": [
        "Origin",
        "Authorization",
        "Content-Type"
      ],
      "expose_headers": [
        "Content-Length"
      ],
      "max_age": "12h"
    }
  },
  "endpoints": [
    {
      "endpoint": "/users",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/users",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "10.245.171.159"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
